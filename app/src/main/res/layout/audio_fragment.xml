<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageButton
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:id="@+id/play"
    android:layout_marginTop="75dp"
    android:src="@drawable/ic_baseline_play_arrow_24"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/audioTimer"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vol"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_volume_up_24"
        app:layout_constraintTop_toTopOf="@id/volumerocker"
        app:layout_constraintBottom_toBottomOf="@id/volumerocker"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/volumerocker"
        android:layout_margin="30dp"
        app:layout_constraintLeft_toRightOf="@id/vol"
        app:layout_constraintTop_toBottomOf="@id/audioTimer"
        app:layout_constraintLeft_toLeftOf="@id/audioTimer"
        app:layout_constraintRight_toRightOf="@id/audioTimer"/>

</androidx.constraintlayout.widget.ConstraintLayout>